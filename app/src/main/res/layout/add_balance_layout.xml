<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:padding="15dp"
            android:id="@+id/text_field_boxes_wallet_bal"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:hasClearButton="true"
            app:hasFocus="true"
            app:helperText="Add Money"
            app:iconSignifier="@drawable/ic_add_black_24dp"
            app:labelText="Enter An Amount">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/editWalletBal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"/>

        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <Button
                android:id="@+id/btnWalletHundred"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/googlesans"
                android:text="₹ 100" />

            <Button
                android:id="@+id/btnWalletFive"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/googlesans"
                android:text="₹ 500" />

            <Button
                android:id="@+id/btnWalletThousand"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/googlesans"
                android:text="₹ 1000" />


        </LinearLayout>




    </LinearLayout>

</RelativeLayout>