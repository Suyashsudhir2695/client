<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.WelcomeActivity"
    android:background="@color/greenBackground">

    <android.support.v4.view.ViewPager
        android:id="@+id/layoutSplashContainer"
        android:layout_width="match_parent"
        android:layout_height="575dp" />

    <LinearLayout
        android:layout_marginTop="30dp"

        android:id="@+id/dotLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layoutSplashContainer"
        android:orientation="horizontal">




    </LinearLayout>

    <ImageView

        android:id="@+id/imgForward"
        android:layout_width="73dp"
        android:layout_height="46dp"
        android:layout_below="@+id/layoutSplashContainer"
        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="322dp"
        android:layout_marginLeft="322dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="64dp"
        android:layout_toRightOf="@id/dotLinearLayout"
        android:src="@drawable/ic_right_arrow" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="73dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="623dp"
        android:layout_marginEnd="326dp"
        android:layout_marginRight="326dp"
        android:layout_marginBottom="64dp"
        android:src="@drawable/ic_left_arrow"
        android:visibility="invisible"/>


</RelativeLayout>