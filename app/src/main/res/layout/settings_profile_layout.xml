<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#f2f2f2"
        app:cardCornerRadius="7dp"
        android:layout_margin="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/googlesans"
                android:text="Name"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_above="@+id/textNameSettings"/>

            <TextView

                android:id="@+id/textNameSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/googlesans"
                android:text="Desiplay Details"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_below="@id/textNameSettings"
                android:background="#4d4d4d"
                android:layout_height="1dp"

                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/googlesans"
                android:text="Password"
                android:textColor="@android:color/black"
                android:textSize="20sp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/textPasswordSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/googlesans"
                android:text="Desiplay Details"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"

                android:background="#4d4d4d"
                android:layout_height="1dp"
                android:layout_below="@+id/textPasswordSettings"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/googlesans"
                android:text="Phone"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textPhoneSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/googlesans"
                android:text="Desiplay Details"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
            <View
                android:layout_width="match_parent"
                android:layout_below="@id/textNameSettings"
                android:background="#4d4d4d"
                android:layout_height="1dp"

                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/googlesans"
                android:text="Home Address"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_below="@+id/textTitleSettings"
                android:id="@+id/textHomeSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/googlesans"
                android:text="Desiplay Details"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
            <View
                android:layout_width="match_parent"
                android:layout_below="@id/textNameSettings"
                android:background="#4d4d4d"
                android:layout_height="1dp"

                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/googlesans"
                    android:text="Two Step Verification"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />



                <Switch


                    android:id="@+id/switchTwoStep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/textTwoStepSettings"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/googlesans"
                android:text="Desiplay Details"
                android:textColor="@android:color/black"
                android:textSize="15sp" />


        </LinearLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>